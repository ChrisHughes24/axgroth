      apply dvd_gcd
      ¬∑ conv_rhs => rw [hr]
        exact dvd_mul_right (gcd u v * x) r
      ¬∑ conv_rhs => rw [hs]
        exact dvd_mul_right (gcd u v * x) s
    rcases this with ‚ü®y, hy‚ü©
    simp [mul_assoc] at hy
    rw [eq_comm, mul_right_eq_self‚ÇÄ] at hy
    simp at hy
    rcases hy with hy | ‚ü®rfl, rfl‚ü©
    ¬∑ exact isUnit_of_mul_eq_one x y hy
    ¬∑ simp at hv
  ¬∑ have : algebraMap (MvPolynomial Œπ K) (FractionRing (MvPolynomial Œπ K)) (gcd u v) ‚â† 0 := by
      simp
      rintro rfl rfl
      simp at hv
    rwa [‚Üê mul_left_inj' this, mul_assoc, ‚Üê map_mul, ‚Üê map_mul, mul_comm s, mul_comm r, ‚Üê hr, ‚Üê hs]

noncomputable def num (p : FractionRing (MvPolynomial Œπ K)) : MvPolynomial Œπ K :=
